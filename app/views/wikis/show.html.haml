.container
  .wiki-show
    %h3.col.md-6= markdown @wiki.title
    %p= markdown @wiki.body
    %br
    = link_to "Edit wiki", edit_wiki_path(@wiki), class: 'btn btn-success btn-sm'
    = link_to "Delete wiki", @wiki, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure you want to delete this wiki?'}
    = link_to "All wikis", wikis_path(@wikis), class: 'btn btn-default btn-sm'
    = link_to "View Collaborators", wiki_collaborators_path(@wiki), class: 'btn btn-warning btn-sm'
    = link_to "Add Collaborators", new_wiki_collaborator_path(@wiki), class: 'btn btn-info btn-sm'

    %hr
    -if @wiki.private?
      .badge.badge-info
        This is a private wiki.

