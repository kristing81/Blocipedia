.container
  .wiki-edit
    %h3= markdown @wiki.title
    %p= markdown @wiki.body
    %br
    %h3 Edit wiki
    %row
      .col-md-4
      .col-md-8
    - if policy(@wiki).edit?
      = render partial: 'form', locals: { wiki: @wiki}
    %br
      = link_to "Back to #{@wiki.title}", wiki_path(@wiki), class: 'btn btn-default btn-sm'